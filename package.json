{
  "name": "stdb-utils",
  "version": "1.0.0",
  "description": "TS/JS utilities for SpacetimeDB",
  "main": "index.js",
  "type": "module",
  "config": {
    "protocol": "http",
    "host": "localhost:5000"
  },
  "scripts": {
    "dev": "tsx scripts/dev.ts",
    "build": "tsx scripts/build.ts",
    "start:Server": "tsx scripts/cli.ts start",
    "start:Min": "npm-run-all -p \"start:Server {@} -- --in-memory\" \"dev {1} {2} {3}\" --",
    "start": "npm-run-all \"setHost {@}\" \"gen {@}\" -p \"start:Server {@} -- --in-memory\" \"pub {@}\" \"dev {1} {2} {3}\" --",
    "gen:STDB": "spacetime generate --lang typescript --out-dir module_bindings --project-path server",
    "gen:SFE": "tsx scripts/singleFileGen.ts ./module_bindings",
    "gen": "tsx scripts/cli.ts gen",
    "pub": "tsx scripts/cli.ts publish",
    "pub:C": "npm run pub -- -c",
    "setHost": "tsx scripts/cli.ts setHost",
    "log": "tsx scripts/cli.ts logs",
    "sql": "tsx scripts/cli.ts sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tcardlab/STDB-Utils.git"
  },
  "keywords": [
    "spacetimedb",
    "spacetime",
    "database",
    "utils",
    "primitives",
    "reactive"
  ],
  "author": "Thomas J. Card",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tcardlab/STDB-Utils/issues"
  },
  "homepage": "https://github.com/tcardlab/STDB-Utils#readme",
  "dependencies": {
    "@clockworklabs/spacetimedb-sdk": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.3",
    "npm-run-all": "^4.1.5",
    "tsx": "^3.13.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-solid": "^2.7.0"
  },
  "workspaces": [
    "vanilla/*",
    "framework/*",
    "template/*",
    "site/"
  ]
}
